{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules" : {
    "arrow-body-style" : 'warn',
    "react/prop-types": 0,
    "arrow-parens": 0,
    "no-use-before-define": 0,
    "react/display-name": 0,
    "no-underscore-dangle": 0
  }
}
